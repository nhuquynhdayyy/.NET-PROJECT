@model List<QuanLyTrungTam.Models.Course>

@{
    ViewData["Title"] = "My Courses";
}

<h2 class="mt-3">My Registered Courses</h2>

@if (Model.Count == 0)
{
    <div class="alert alert-info">
        You haven't registered for any courses yet.
    </div>
}
else
{
    <table class="table table-bordered table-hover mt-3">
        <thead class="table-dark">
            <tr>
                <th>Course Name</th>
                <th>Instructor</th>
                <th>Start Date</th>
                <th>Tuition Fee</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model)
            {
                <tr>
                    <td>@course.CourseName</td>
                    <td>@course.Lecturer</td>
                    <td>@course.StartDate.ToString("dd/MM/yyyy")</td>
                    <td>@String.Format(new System.Globalization.CultureInfo("vi-VN"), "{0:C0}", course.TuitionFee)</td>
                    <td>
                        <!-- Hủy đăng ký (bổ sung sau nếu bạn muốn) -->
                        @* <form asp-controller="Enrollment" asp-action="Cancel" method="post">
                            <input type="hidden" name="courseId" value="@course.CourseId" />
                            <button class="btn btn-danger btn-sm" type="submit">Cancel</button>
                        </form> *@
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
