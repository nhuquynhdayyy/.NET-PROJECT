@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Dữ liệu mẫu - trong thực tế sẽ lấy từ Model
        const revenueData = {
            labels: ['T1', 'T2', 'T3', 'T4', 'T5', 'T6', 'T7', 'T8', 'T9', 'T10', 'T11', 'T12'],
            datasets: [{
                label: 'Doanh thu (triệu đồng)',
                backgroundColor: 'rgba(2, 117, 216, 0.2)',
                borderColor: 'rgba(2, 117, 216, 1)',
                data: [10, 15, 20, 25, 30, 35, 40, 45, 50, 55, 60, 65],
            }]
        };
        
        const enrollmentData = {
            labels: @Html.Raw(Json.Serialize(Model.CourseNames)),
            datasets: [{
                data: @Html.Raw(Json.Serialize(Model.EnrollmentCounts)),
                backgroundColor: ['#007bff', '#28a745', '#ffc107', '#dc3545', '#6f42c1', '#fd7e14'],
            }]
        };
        
        // Vẽ biểu đồ
        const ctxRevenue = document.getElementById('revenueChart');
        let revenueChart = new Chart(ctxRevenue, {
            type: 'bar',
            data: revenueData,
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                },
                animation: {
                    duration: 1000,
                    easing: 'easeInOutQuad'
                }
            }
        });
        
        const ctxEnrollment = document.getElementById('enrollmentChart');
        let enrollmentChart = new Chart(ctxEnrollment, {
            type: 'pie',
            data: enrollmentData,
            options: {
                animation: {
                    duration: 1000,
                    easing: 'easeInOutQuad'
                }
            }
        });
        
        // Chuyển đổi loại biểu đồ
        $("#chartTypeBar").click(function() {
            $(this).addClass('active');
            $("#chartTypeLine").removeClass('active');
            revenueChart.destroy();
            revenueChart = new Chart(ctxRevenue, {
                type: 'bar',
                data: revenueData,
                options: {
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    },
                    animation: {
                        duration: 1000,
                        easing: 'easeInOutQuad'
                    }
                }
            });
        });
        
        $("#chartTypeLine").click(function() {
            $(this).addClass('active');
            $("#chartTypeBar").removeClass('active');
            revenueChart.destroy();
            revenueChart = new Chart(ctxRevenue, {
                type: 'line',
                data: revenueData,
                options: {
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    },
                    animation: {
                        duration: 1000,
                        easing: 'easeInOutQuad'
                    }
                }
            });
        });
    </script>
} *@
