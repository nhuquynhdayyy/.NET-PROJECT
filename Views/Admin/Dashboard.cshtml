@model QuanLyTrungTam.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5 fw-bold text-primary">Dashboard</h1>
    </div>
    
    <div class="row">
        <div class="col-md-3">
            <div class="card bg-primary text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-0">Học viên</h6>
                            <h2 class="display-4 mb-0">@Model.TotalStudents</h2>
                        </div>
                        <div class="rounded-circle bg-white p-3">
                            <i class="bi bi-people-fill text-primary fs-1"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href="@Url.Action("Index", "Students")">Xem chi tiết</a>
                    <div class="small text-white"><i class="bi bi-arrow-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-0">Khóa học</h6>
                            <h2 class="display-4 mb-0">@Model.TotalCourses</h2>
                        </div>
                        <div class="rounded-circle bg-white p-3">
                            <i class="bi bi-journal-richtext text-success fs-1"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href="@Url.Action("Index", "Courses")">Xem chi tiết</a>
                    <div class="small text-white"><i class="bi bi-arrow-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-0">Lượt đăng ký</h6>
                            <h2 class="display-4 mb-0">@Model.TotalEnrollments</h2>
                        </div>
                        <div class="rounded-circle bg-white p-3">
                            <i class="bi bi-clipboard-check text-warning fs-1"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href="@Url.Action("CourseEnrollments", "Admin")">Xem chi tiết</a>
                    <div class="small text-white"><i class="bi bi-arrow-right"></i></div>
                </div>
            </div>
        </div>
    </div>
</div>
